  "license": "MIT",
  "engines": {
    "node": ">=10.15.3"
  },
  "bin": {
    "slp": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bitcoin-com/slp-sdk.git"
  },
