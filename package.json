  ],
  "license": "MIT",
  "engines": {
    "node": ">=10.15.1"
  },
  "bin": {
    "slp": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bitcoin-com/slp-sdk.git"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-register": "^6.26.0",
    "bignumber.js": "^7.2.1",
    "bitbox-sdk": "^3.1.0",
    "chalk": "^2.3.0",
    "clear": "0.1.0",
    "commander": "^2.13.0",
    "figlet": "^1.2.1",
